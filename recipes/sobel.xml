<smartimage>
	<!-- compute a sobel transform -->
	<!-- see also: https://en.wikipedia.org/wiki/Sobel_operator -->
	<plugin name="sobel">
		<image src="@image" />
		<convolution>
			[[ 1,0,-1],
			 [ 2,0,-2],
			 [ 1,0,-1]]
		</convolution>
		<convolution>
			[[ 1, 2, 1],
			 [ 0, 0, 0],
			 [-1,-2,-1]]
		</convolution>
	</plugin>
</smartimage>