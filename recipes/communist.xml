<smartimage>
	<!-- make the image look like a communist propaganda poster -->
	<plugin id="communist">
		<form>
			<numeric name="amount" value="1.0"/>
		</form>
		<image src="RGB=
			((@image.R+@image.G+@image.B)/3)<@amount?0:@image.R*2,
			((@image.R+@image.G+@image.B)/3)<@amount?0:@image.G/2,
			((@image.R+@image.G+@image.B)/3)<@amount?0:@image.B/2"/>
	</plugin>
</smartimage>